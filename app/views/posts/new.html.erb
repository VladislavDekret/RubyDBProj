<div class="col-md-8">
<form action="/posts/create" method="POST">
  <div class="form-group">
    <label for="title">Name</label>
    <input type="text" name="attraction[name]" class="form-control">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Select admin</label>
    <select class="form-control" name="attraction[id_admin]">
      <% @admins.each do |admin|%>
        <option value="<%= admin.id_admin %>"><%= admin.surname%></option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Select tech team</label>
    <select class="form-control" name="attraction[id_tech]">
      <% @techs.each do |tech|%>
        <option value="<%= tech.id_tech %>"><%= tech.spec%></option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <label>Age:</label>
    <textarea name="attraction[age]" class="form-control" rows="10"></textarea>
  </div>
  <div class="form-group">
    <label>During:</label>
    <textarea name="attraction[during]" class="form-control" rows="10"></textarea>
  </div>
  <div class="form-group">
    <label>Price:</label>
    <textarea name="attraction[price]" class="form-control" rows="10"></textarea>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token%>
   <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>